<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/date_item"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@color/app_color3"
        android:elevation="1dp"
        android:gravity="center"
        android:minWidth="70dp"
        android:padding="5dp"
        android:text="التاريخ"
        android:textColor="#000"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kilo_item"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@color/app_color2"
        android:elevation="1dp"
        android:gravity="center"
        android:minWidth="70dp"
        android:padding="5dp"
        android:text="سعر الكيلو"
        android:textColor="#000"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quantity_item"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@color/app_color2"
        android:elevation="1dp"
        android:gravity="center"
        android:minWidth="70dp"
        android:padding="5dp"
        android:text="الكمية"
        android:textColor="#000"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/discounts_item"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@color/app_color2"
        android:elevation="1dp"
        android:gravity="center"
        android:minWidth="70dp"
        android:padding="5dp"
        android:text="خصومات"
        android:textColor="#000"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sub_total_item"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@color/color2"
        android:elevation="5dp"
        android:gravity="center"
        android:minWidth="70dp"
        android:padding="5dp"
        android:text="الإجمالى"
        android:textColor="#000"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/delete_item"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:elevation="5dp"
        android:gravity="center"
        android:minWidth="70dp"
        android:padding="5dp"
        android:text="حذف"
        android:textColor="#000"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone" />

</TableRow>


