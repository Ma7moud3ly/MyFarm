<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color2"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/app_color1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cultivation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/add_cultivation"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center|right"
            android:text="نوع الزراعة"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="70"
            android:gravity="center"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center|right"
            android:text="عدد الأفدنة"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/acres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="70"
            android:gravity="center"
            android:inputType="number"
            android:layoutDirection="ltr"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/app_color3"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:clickable="true"
            android:onClick="save_cultivation"
            android:gravity="center|right"
            android:text="حفظ"
            android:textColor="#000"
            android:textSize="14sp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:onClick="save_cultivation"
            android:background="@color/app_color3"
            android:src="@drawable/ic_save_black_24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:clickable="true"
            android:gravity="center|right"
            android:text="رجوع"
            android:onClick="back"
            android:textColor="#000"
            android:textSize="14sp" />

        <ImageButton
            android:layout_width="30dp"
            android:onClick="back"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/app_color3"
            android:src="@drawable/ic_arrow_back_black_24dp" />
    </LinearLayout>
</LinearLayout>
